<h1>Listing articles</h1>

<%= link_to "Make new stuff", new_article_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Author</th>
    <th>Actions</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article.author.email %></td>
      <td><%= link_to 'View full', article_path(article) %></td>
      <td><%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you certain?"} %></td>
      <td><%= link_to "Edit", edit_article_path(article) %></td>
    </tr>
  <% end %>
</table>

<h1><%= @article.title %></h1>

<div class="article content">
  <%= @article.text %>
</div>

<% if @article.comments.any? %>
<div class="article comments">
  <h2>Comments</h2>
  <%= render @article.comments %>
</div>
<% end %>

<%= render 'comments/form' %>

<%= link_to "Edit", edit_article_path(@article) %> |
<%= link_to "Back", controller: articles_path %>
